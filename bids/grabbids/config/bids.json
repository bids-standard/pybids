{
    "entities": [
        {
            "name": "subject",
            "pattern": "sub-([a-zA-Z0-9]+)",
            "directory": "{{root}}/{subject}"
        },
        {
            "name": "session",
            "pattern": "ses-([a-zA-Z0-9]+)",
            "mandatory": false, 
            "directory": "{{root}}/{subject}/{session}",
            "missing_value": "ses-1"
        },
        {
            "name": "run",
            "pattern": "run-(\\d+)"
        },
        {
            "name": "type",
            "pattern": ".*_([a-zA-Z0-9]*?)\\."
        },
        {
            "name": "task",
            "pattern": "task-(.*?)(?:_+)"
        },
        {
            "name": "scans",
            "pattern": "(.*\\_scans.tsv)$"
        },
        {
            "name": "acquisition",
            "pattern": "acq-(.*?)(?:_+)"
        },
        {
            "name": "bval",
            "pattern": "(.*\\.bval)$"
        },
        {
            "name": "bvec",
            "pattern": "(.*\\.bvec)$"
        },
        {
            "name": "fmap",
            "pattern": "(phasediff|magnitude[1-2]|phase[1-2]|fieldmap|epi)\\.nii"
        },
        {
            "name": "modality",
            "pattern": "\/(func|anat|fmap|dwi)\/"
        },
        {
            "name": "dir",
            "pattern": "dir-([a-zA-Z0-9]+)"
        },
        {
            "name": "acq",
            "pattern": "acq-([a-zA-Z0-9]+)"
        }
    ]
}
